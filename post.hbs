{{!< default}}

        {{#post}}
    {{navigation}}

<main class="content" role="main">

    <header class="post-header">

        <h1 class="post-title">{{{title}}}</h1>
    </header>

    <article class="post-page {{post_class}}">

        {{! Everything inside the #post tags pulls data from the post }}

            <span class="post-meta">
              <time datetime="{{date format="YYYY-MM-DD"}}">
              {{date format='DD MMMM YYYY'}}</time>
              {{tags prefix="in " separator=" | "}}
            </span>

            <section class="post-content">
                {{#if feature_image}}
                    <img class="post-featured-hero" src="{{img_url feature_image}}"/>
                {{/if}}
                {{content}}
                <span class="author-post-footer">
                  Written by
                  {{#foreach authors}}
                  <img class="author-img-post" src="{{img_url profile_image}}"
                  title="{{name}}"/>
                  <a class="author-posturl" href="{{url}}">{{name}}</a>.
                  {{/foreach}}
                </span>
                <nav class="thinkbig-post-nav-top">
                    <ul style="float: left">
                        {{#prev_post}}
                            <li><a href="{{url}}">&larr; Previous</a></li>
                        {{else}}
                            <li><a href="/">&larr; Home</a></li>
                        {{/prev_post}}
                    </ul>
                    <ul style="float: right">
                        {{#next_post}}<li><a href="{{url}}">Next &rarr;</a></li>
                        {{/next_post}}
                    </ul>
                </nav>
                {{> nav-goto_subscribe}}
                {{> mailform}}
            </section>
    </article>

    <aside class="read-next">

        {{#prev_post}}
        <a class="read-next-story prev {{#if feature_image}}"
        style="background-image: url({{img_url feature_image}}){{else}}no-cover{{/if}}"
        href="{{url}}">
            <section class="post">
                <h2>{{title}}</h2>
                <p>{{excerpt words="19"}}&hellip;</p>
            </section>
        </a>
        {{/prev_post}}

        {{#next_post}}
        <a class="read-next-story {{#if feature_image}}"
        style="background-image: url({{img_url feature_image}}){{else}}no-cover{{/if}}"
        href="{{url}}">
            <section class="post">
                <h2>{{title}}</h2>
                <p>{{excerpt words="19"}}&hellip;</p>
            </section>
        </a>
        {{/next_post}}
    </aside>

    <aside class="related-posts">
      <div class="inner">
        <h4>Recent Posts</h4>
          <div class="related-tag-left">
            {{#get "posts" limit="2" page="1" order="published_at desc" include="tag,authors" filter="id:-{{comment_id}}"}}
              {{#foreach posts}}
                <span class="related-article">
                  <p><a class="related-title-link" href="{{url}}">{{title}}</a></br>
                    {{#foreach authors}}
                      <a class="related-link" href="{{url}}">{{name}}</a></p>
                    {{/foreach}}
                </span>
                {{/foreach}}
            {{/get}}
          </div>
          <div class="related-tag-right">
            {{#get "posts" limit="2" page="2" order="published_at desc" include="tag,authors" filter="id:-{{comment_id}}"}}
              {{#foreach posts}}
                <span class="related-article">
                  <p><a class="related-title-link" href="{{url}}">{{title}}</a></br>
                    {{#foreach authors}}
                      <a class="related-link" href="{{url}}">{{name}}</a>
                    {{/foreach}}
                  </p>
                </span>
                {{/foreach}}
            {{/get}}
          </div>
      </div>
    </aside>

    <div id="comments"><div id="disqus_thread"></div></div>
    <script type="text/javascript">
    /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
    var disqus_shortname = 'bigthinkingapplied'; // required: forum shortname
    var disqus_identifier = 'bigthinkingapplied-{{comment_id}}';

    /* * * DON'T EDIT BELOW THIS LINE * * */
    (function() {
    var dsq = document.createElement('script');
    dsq.type = 'text/javascript';
    dsq.async = true;
    dsq.src = 'https://' + disqus_shortname + '.disqus.com/embed.js?https';
    (document.getElementsByTagName('head')[0] ||
    document.getElementsByTagName('body')[0]).appendChild(dsq);
    })();
    </script>
    <noscript>Please enable JavaScript to view the comments.</noscript>

    {{/post}}
</main>

