<!DOCTYPE html>
<html lang="{{@site.lang}}">
<head>
    {{! Document Settings }}
    <meta charset="utf-8">

    {{! Page Meta }}
    <title>{{meta_title}}</title>
    <meta name="description" content="{{@site.description}}">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Facebook Open Graph Meta Tags -->
    <meta property="og:site_name" content="{{@site.title}}">
    <meta property="og:url" content="{{@site.url}}{{url}}">
    <meta property="og:title" content="{{meta_title}}">
    {{#is "post"}}
    {{#post}}
    <meta name="twitter:description" content="{{meta_description}}">
    {{/post}}
    {{else}}
    <meta property="og:description" content="{{@site.description}}">
    {{/is}}
    <meta property="og:type" content="website">
    <meta property="og:locale" content="{{@site.lang}}">
    {{#is "post"}}
    {{#post}}
        {{#if feature_image}}
    <meta property="og:image" content="{{img_url feature_image absolute='true'}}">
        {{else}}
    <meta property="og:image" content="{{@site.url}}{{@site.logo}}">
        {{/if}}
    {{/post}}
    {{else}}
    <meta property="og:image" content="{{@site.url}}{{@site.logo}}">
    {{/is}}
    <!-- Facebook og end -->

    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="@nbranche">
    <meta name="twitter:title" content="{{meta_title}}">
    {{#is "post"}}
    {{#post}}
    <meta name="twitter:description" content="{{meta_description}}">
        {{#if feature_image}}
    <meta property="twitter:image:src" content="{{img_url feature_image absolute='true'}}">
        {{/if}}
    {{/post}}
    {{else}}
    <meta name="twitter:description" content="{{@site.description}}">
    {{/is}}
    {{! Leaving this out until as there is no equivalent user property. However, single user site can still utilize <meta name="twitter:creator" content="@twitter-user" /> }}
    <!-- Twitter Card End -->

    {{! Styles'n'Scripts }}
    <link rel="stylesheet" type="text/css" href="{{asset "css/screen.css"}}">
    <link rel="stylesheet" type="text/css" href="{{asset "css/post-feed.css"}}">
    <link rel="stylesheet" type="text/css" href="{{asset "css/kg.css"}}">
    <link rel="stylesheet" type="text/css" href="{{asset "highlighter/styles/thinkbig-github.css"}}">
    <link rel="stylesheet" type="text/css" href="{{asset "css/comments.css"}}">
    <link rel="stylesheet" type="text/css" href="{{asset "css/readmore.css"}}">

    {{! Commented out the headers below to allow us to remove the meta generator security risk and customize what information is included }}
    {{! head}}

    <link rel="alternate" type="application/rss+xml" title="{{@site.title}}" href="/rss/">
    <link rel="canonical" href="{{@site.url}}{{url}}">
    {{ghost_head}}
</head>
<body class="{{body_class}}">

    {{! Load JQuery first since so any scripts and templates depend on it}}
    <script type="text/javascript" src="{{asset "js/jquery-3.5.1.min.js"}}"></script>

    {{! Everything else gets inserted here }}
    {{{body}}}

    {{! The main JavaScript files }}
    <script type="text/javascript" src="{{asset "js/gallery.js"}}"></script>
    <script type="text/javascript" src="{{asset "js/jquery.fitvids.js"}}"></script>
    <script type="text/javascript" src="{{asset "js/index.js"}}"></script>
    <script async type="text/javascript" src="{{asset "js/menu.js"}}"></script>
    <script type="text/javascript" src="{{asset "highlighter/highlight.pack.js"}}"></script>
    <script type="text/javascript" src="{{asset "gh/ghosthunter.js"}}"></script>
    <script type="text/javascript">hljs.initHighlightingOnLoad();</script>
    {{ghost_foot}}
</body>
</html>
