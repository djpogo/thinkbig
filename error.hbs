{{!< default}}

{{! The main content area }}
    <main class="content" role="main">
      <section class="error-content error-404 js-error-container inner">
        <section class="error-details">
          <figure class="error-image">
          </figure>
          <section class="error-message">
            <h1 class="error-description">{{message}}</h2>
            <h3 class="error-code">{{code}}</h1>
            <p style="text-align: center;">
              <a class="error-goto-home" href="/">Return to Home &larr;</a>
            </p>
          </section>
        </section>
      </section>

      {{#if stack}}
        <section class="error-stack inner">
          <h3>Stack Trace</h3>
          <p><strong>{{message}}</strong></p>
          <ul class="error-stack-list">
            {{#foreach stack}}
              <li>
                at
                {{#if function}}<em class="error-stack-function">{{function}}</em>{{/if}}
                <span class="error-stack-file">({{at}})</span>
              </li>
            {{/foreach}}
          </ul>
        </section>
      {{/if}}
    </main>
